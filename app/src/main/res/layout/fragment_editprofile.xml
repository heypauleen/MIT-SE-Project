<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingTop="10dp">
            <ImageView
                android:src="@mipmap/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
        <TextView
            style="@style/headerText"
            android:text="Edit Profile"
            android:paddingLeft="20dp"
            android:layout_marginBottom="2dp"/>
        <RelativeLayout
            android:background="@drawable/dashed"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="130dp"
            android:layout_margin="2dp"
            android:paddingTop="20dp"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imgprofile"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/imgitem"
                android:alpha="0.3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:src="@mipmap/addphoto" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:weightSum="4"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Fullname:" />
                    <EditText
                        android:background="@drawable/input_borders"
                        android:layout_width="match_parent"
                        android:id="@+id/txtfullname"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Username:" />
                    <EditText
                        android:background="@drawable/input_borders"
                        android:layout_width="match_parent"
                        android:id="@+id/txtusername"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Email:" />

                    <EditText
                        android:id="@+id/txtemail"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_borders" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="83dp"
                        android:inputType="phone"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Contact No:" />

                    <EditText
                        android:id="@+id/txtcontactno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_borders" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="83dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:text="Short Bio:" />
                    <EditText
                        android:background="@drawable/input_borders"
                        android:layout_width="match_parent"
                        android:maxLines="5"
                        android:gravity="top|left"
                        android:scrollbars="vertical"
                        android:lines="5"
                        android:inputType="textMultiLine"
                        android:id="@+id/txtshortbio"
                        android:layout_height="80dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:text="Gender:" />

                    <Spinner
                        android:id="@+id/txtgender"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/input_borders"
                        android:entries="@array/gender"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:text="City:" />
                    <EditText
                        android:background="@drawable/input_borders"
                        android:layout_width="match_parent"
                        android:id="@+id/txtcity"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/googlesansregular"
                        android:text="Interests:" />
                    <EditText
                        android:background="@drawable/input_borders"
                        android:layout_width="match_parent"
                        android:id="@+id/txtinterests"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <ProgressBar
                    android:id="@+id/progressadduser"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="2">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="@style/button_pink"
                    android:id="@+id/btnsaveprofile"
                    android:textSize="17dp"
                    android:text="SAVE"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="@style/button_grey"
                    android:id="@+id/btncancelprofile"
                    android:textSize="17dp"
                    android:text="CANCEL"/>

            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
</LinearLayout>